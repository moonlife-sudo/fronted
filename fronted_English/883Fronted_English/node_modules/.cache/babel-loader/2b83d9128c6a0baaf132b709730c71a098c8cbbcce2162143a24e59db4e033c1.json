{"ast":null,"code":"export default {\n  name: 'AdminLibrary',\n  data() {\n    return {\n      // 书籍数据\n      books: [{\n        id: 1,\n        title: \"Professional JavaScript for Web Developers\",\n        author: \"Nicholas C. Zakas\",\n        cover: \"https://placeholder.pics/svg/300x200/DEDEDE/555555/JavaScript%20Advanced%20Programming\",\n        category: \"Technology\",\n        isbn: \"9787115275790\",\n        totalCount: 5,\n        currentCount: 3,\n        description: \"This book details the core concepts and technical details of the JavaScript language.\"\n      }, {\n        id: 2,\n        title: \"CSS Secrets\",\n        author: \"Lea Verou\",\n        cover: \"https://placeholder.pics/svg/300x200/DEDEDE/555555/CSS%20Secrets\",\n        category: \"Technology\",\n        isbn: \"9787115433459\",\n        totalCount: 3,\n        currentCount: 0,\n        description: \"This book reveals 47 little-known CSS tricks.\"\n      }, {\n        id: 3,\n        title: \"One Hundred Years of Solitude\",\n        author: \"Gabriel García Márquez\",\n        cover: \"https://placeholder.pics/svg/300x200/DEDEDE/555555/One%20Hundred%20Years%20of%20Solitude\",\n        category: \"Literature\",\n        isbn: \"9787544258974\",\n        totalCount: 8,\n        currentCount: 2,\n        description: \"A masterpiece of Latin American magical realism literature.\"\n      }, {\n        id: 4,\n        title: \"Sapiens: A Brief History of Humankind\",\n        author: \"Yuval Noah Harari\",\n        cover: \"https://placeholder.pics/svg/300x200/DEDEDE/555555/Sapiens%3A%20A%20Brief%20History%20of%20Humankind\",\n        category: \"History\",\n        isbn: \"9787508647357\",\n        totalCount: 4,\n        currentCount: 4,\n        description: \"The human development journey from the Cognitive Revolution to the Scientific Revolution.\"\n      }, {\n        id: 5,\n        title: \"The Story of Art\",\n        author: \"E.H. Gombrich\",\n        cover: \"https://placeholder.pics/svg/300x200/DEDEDE/555555/The%20Story%20of%20Art\",\n        category: \"Art\",\n        isbn: \"9787108018511\",\n        totalCount: 2,\n        currentCount: 0,\n        description: \"A classic introductory book on art history.\"\n      }, {\n        id: 6,\n        title: \"The Design of Everyday Things\",\n        author: \"Donald A. Norman\",\n        cover: \"https://placeholder.pics/svg/300x200/DEDEDE/555555/The%20Design%20of%20Everyday%20Things\",\n        category: \"Technology\",\n        isbn: \"9787121285862\",\n        totalCount: 6,\n        currentCount: 1,\n        description: \"Exploring the relationship between everyday product design and user psychology.\"\n      }],\n      // 筛选条件\n      searchQuery: '',\n      categoryFilter: '',\n      statusFilter: '',\n      // 模态框状态 - 重命名以避免与方法名冲突\n      isUploadModalVisible: false,\n      isLoanDurationModalVisible: false,\n      editingBook: null,\n      // 表单数据\n      bookForm: {\n        title: '',\n        author: '',\n        isbn: '',\n        category: '',\n        totalCount: 1,\n        currentCount: 1,\n        description: '',\n        cover: null\n      },\n      // 借书时长\n      loanDuration: 14,\n      // Toast 提示\n      toast: {\n        show: false,\n        message: ''\n      }\n    };\n  },\n  computed: {\n    // 筛选后的书籍列表\n    filteredBooks() {\n      let filtered = this.books;\n      if (this.searchQuery) {\n        const query = this.searchQuery.toLowerCase();\n        filtered = filtered.filter(book => book.title.toLowerCase().includes(query) || book.author.toLowerCase().includes(query));\n      }\n      if (this.categoryFilter) {\n        filtered = filtered.filter(book => book.category === this.categoryFilter);\n      }\n      if (this.statusFilter) {\n        if (this.statusFilter === 'available') {\n          filtered = filtered.filter(book => book.currentCount > 0);\n        } else if (this.statusFilter === 'borrowed') {\n          filtered = filtered.filter(book => book.currentCount === 0);\n        }\n      }\n      return filtered;\n    }\n  },\n  methods: {\n    // 显示上传模态框\n    openUploadModal() {\n      this.editingBook = null;\n      this.bookForm = {\n        title: '',\n        author: '',\n        isbn: '',\n        category: '',\n        totalCount: 1,\n        currentCount: 1,\n        description: '',\n        cover: null\n      };\n      this.isUploadModalVisible = true;\n    },\n    // 显示借书时长模态框\n    openLoanDurationModal() {\n      this.isLoanDurationModalVisible = true;\n    },\n    // 关闭所有模态框\n    closeModals() {\n      this.isUploadModalVisible = false;\n      this.isLoanDurationModalVisible = false;\n      this.editingBook = null;\n    },\n    // 处理书籍提交（新增或编辑）\n    handleBookSubmit() {\n      if (this.editingBook) {\n        // 更新书籍\n        const index = this.books.findIndex(b => b.id === this.editingBook.id);\n        if (index !== -1) {\n          this.books[index] = {\n            ...this.editingBook,\n            ...this.bookForm\n          };\n          this.showToast('Book information updated successfully!');\n        }\n      } else {\n        // 新增书籍\n        const newBook = {\n          id: Date.now(),\n          ...this.bookForm,\n          cover: this.bookForm.cover || `https://placeholder.pics/svg/300x200/DEDEDE/555555/${encodeURIComponent(this.bookForm.title)}`\n        };\n        this.books.unshift(newBook);\n        this.showToast('Book uploaded successfully!');\n      }\n      this.closeModals();\n    },\n    // 编辑书籍\n    editBook(book) {\n      this.editingBook = book;\n      this.bookForm = {\n        ...book\n      };\n      this.isUploadModalVisible = true;\n    },\n    // 删除书籍\n    deleteBook(bookId) {\n      if (confirm('Are you sure you want to delete this book?')) {\n        const index = this.books.findIndex(b => b.id === bookId);\n        if (index !== -1) {\n          this.books.splice(index, 1);\n          this.showToast('Book deleted');\n        }\n      }\n    },\n    // 处理封面图片上传\n    handleCoverUpload(event) {\n      const file = event.target.files[0];\n      if (file) {\n        // In a real application, this should upload to a server and get a URL\n        // Here we simply use a local URL for preview\n        this.bookForm.cover = URL.createObjectURL(file);\n      }\n    },\n    // 保存借书时长设置\n    saveLoanDuration() {\n      // 在实际应用中，这里会发送到服务器保存设置\n      console.log(`Loan duration set to: ${this.loanDuration} days`);\n      this.showToast(`Loan duration set to ${this.loanDuration} days`);\n      this.closeModals();\n    },\n    // 显示 Toast 提示\n    showToast(message) {\n      this.toast.message = message;\n      this.toast.show = true;\n      setTimeout(() => {\n        this.toast.show = false;\n      }, 3000);\n    },\n    // 筛选书籍（用于搜索和筛选）\n    filterBooks() {\n      // 这个方法现在由 computed 属性 filteredBooks 自动处理\n      // 保留这个方法是为了兼容模板中的 @input 和 @change 事件\n    }\n  },\n  mounted() {\n    console.log('AdminLibrary 组件已挂载');\n    console.log('初始书籍数据:', this.books);\n  }\n};","map":{"version":3,"names":["name","data","books","id","title","author","cover","category","isbn","totalCount","currentCount","description","searchQuery","categoryFilter","statusFilter","isUploadModalVisible","isLoanDurationModalVisible","editingBook","bookForm","loanDuration","toast","show","message","computed","filteredBooks","filtered","query","toLowerCase","filter","book","includes","methods","openUploadModal","openLoanDurationModal","closeModals","handleBookSubmit","index","findIndex","b","showToast","newBook","Date","now","encodeURIComponent","unshift","editBook","deleteBook","bookId","confirm","splice","handleCoverUpload","event","file","target","files","URL","createObjectURL","saveLoanDuration","console","log","setTimeout","filterBooks","mounted"],"sources":["/Users/zhouzhou/Downloads/fronted-fronted_new/883Fronted_English/src/views/Admin/Resource/AdminLibrary.vue"],"sourcesContent":["<template>\n  <div class=\"admin-library\">\n    \n    <main class=\"admin-library-container\">\n      <section class=\"library-controls\">\n        <h1 class=\"page-title\">Library Management</h1>\n        <div class=\"action-buttons\">\n          <button @click=\"openUploadModal\" class=\"btn btn-primary\">\n            <i class=\"bi bi-plus-circle\"></i> Upload New Book\n          </button>\n          <button @click=\"openLoanDurationModal\" class=\"btn btn-secondary\">\n            <i class=\"bi bi-clock\"></i> Set Loan Duration\n          </button>\n        </div>\n      </section>\n\n      <section class=\"search-filter-section\">\n        <div class=\"search-box\">\n           <i class=\"bi bi-search\"></i>\n          <input \n            type=\"text\" \n            placeholder=\"Search books...\" \n            v-model=\"searchQuery\"\n\n          >\n        </div>\n        <div class=\"filter-options\">\n          <select v-model=\"categoryFilter\" @change=\"filterBooks\">\n            <option value=\"\">All Categories</option>\n            <option value=\"Technology\">Technology</option>\n            <option value=\"Literature\">Literature</option>\n            <option value=\"History\">History</option>\n            <option value=\"Art\">Art</option>\n          </select>\n          <select v-model=\"statusFilter\" @change=\"filterBooks\">\n            <option value=\"\">All Status</option>\n            <option value=\"available\">Available</option>\n            <option value=\"borrowed\">Unavailable</option>\n          </select>\n        </div>\n      </section>\n\n      <section class=\"book-list\">\n        <div class=\"book-list-header\">\n          <h2>Book List</h2>\n          <span class=\"book-count\">Total <span id=\"total-books\">{{ filteredBooks.length }}</span> books</span>\n        </div>\n        \n        <div class=\"books-grid\">\n          <div \n            v-for=\"book in filteredBooks\" \n            :key=\"book.id\" \n            class=\"book-card\"\n          >\n            <img :src=\"book.cover\" :alt=\"book.title\" class=\"book-cover\" loading=\"lazy\">\n            <div class=\"book-info\">\n              <h3 class=\"book-title\">{{ book.title }}</h3>\n              <p class=\"book-author\">{{ book.author }}</p>\n              <div class=\"book-meta\">\n                <span class=\"book-category\">{{ book.category }}</span>\n                <span class=\"book-current-count\">Current: {{ book.currentCount }}/{{ book.totalCount }}</span>\n                <span class=\"book-status\" :class=\"book.currentCount === 0 ? 'borrowed' : 'available'\">\n                  {{ book.currentCount === 0 ? 'Unavailable' : 'Available' }}\n                </span>\n              </div>\n              <div class=\"book-actions\">\n                <button @click=\"editBook(book)\" class=\"btn btn-secondary\">\n                  <i class=\"bi bi-pencil\"></i> Edit\n                </button>\n                <button @click=\"deleteBook(book.id)\" class=\"btn btn-danger\">\n                  <i class=\"bi bi-trash\"></i> Delete\n                </button>\n              </div>\n            </div>\n          </div>\n          \n          <div v-if=\"filteredBooks.length === 0\" class=\"no-books\">\n            No matching books found\n          </div>\n        </div>\n      </section>\n\n      <!-- 上传书籍模态框 -->\n      <div v-if=\"isUploadModalVisible\" class=\"modal show\" @click.self=\"closeModals\">\n        <div class=\"modal-content\">\n          <span class=\"close-modal\" @click=\"closeModals\">&times;</span>\n          <h2>{{ editingBook ? 'Edit Book' : 'Upload New Book' }}</h2>\n          <form @submit.prevent=\"handleBookSubmit\">\n            <div class=\"form-group\">\n              <label for=\"book-title\">Title</label>\n              <input type=\"text\" id=\"book-title\" v-model=\"bookForm.title\" required>\n            </div>\n            <div class=\"form-group\">\n              <label for=\"book-author\">Author</label>\n              <input type=\"text\" id=\"book-author\" v-model=\"bookForm.author\" required>\n            </div>\n            <div class=\"form-group\">\n              <label for=\"book-isbn\">ISBN</label>\n              <input type=\"text\" id=\"book-isbn\" v-model=\"bookForm.isbn\" required>\n            </div>\n            <div class=\"form-group\">\n              <label for=\"book-category\">Category</label>\n              <select id=\"book-category\" v-model=\"bookForm.category\" required>\n                <option value=\"\">Select Category</option>\n                <option value=\"Literature\">Literature</option>\n                <option value=\"Technology\">Technology</option>\n                <option value=\"History\">History</option>\n                <option value=\"Art\">Art</option>\n              </select>\n            </div>\n            <div class=\"form-group\">\n              <label for=\"book-total-count\">Total Count</label>\n              <input type=\"number\" id=\"book-total-count\" v-model.number=\"bookForm.totalCount\" min=\"1\" required>\n            </div>\n            <div class=\"form-group\">\n              <label for=\"book-current-count\">Current Count</label>\n              <input type=\"number\" id=\"book-current-count\" v-model.number=\"bookForm.currentCount\" min=\"0\" :max=\"bookForm.totalCount\" required>\n            </div>\n            <div class=\"form-group\">\n              <label for=\"book-cover\">Cover Image</label>\n              <input type=\"file\" id=\"book-cover\" accept=\"image/*\" @change=\"handleCoverUpload\">\n            </div>\n            <div class=\"form-group\">\n              <label for=\"book-description\">Description</label>\n              <textarea id=\"book-description\" rows=\"4\" v-model=\"bookForm.description\"></textarea>\n            </div>\n            <button type=\"submit\" class=\"btn btn-primary\">\n              {{ editingBook ? 'Update' : 'Upload' }}\n            </button>\n          </form>\n        </div>\n      </div>\n\n      <!-- 设置借书时长模态框 -->\n      <div v-if=\"isLoanDurationModalVisible\" class=\"modal show\" @click.self=\"closeModals\">\n        <div class=\"modal-content\">\n          <span class=\"close-modal\" @click=\"closeModals\">&times;</span>\n          <h2>Set Loan Duration</h2>\n          <form @submit.prevent=\"saveLoanDuration\">\n            <div class=\"form-group\">\n              <label for=\"loan-duration\">Loan Duration (days)</label>\n              <input type=\"number\" id=\"loan-duration\" v-model.number=\"loanDuration\" min=\"1\" max=\"30\" required>\n            </div>\n            <button type=\"submit\" class=\"btn btn-primary\">Save Settings</button>\n          </form>\n        </div>\n      </div>\n    </main>\n    \n\n    <!-- Toast 提示 -->\n    <div v-if=\"toast.show\" class=\"toast show\">\n      {{ toast.message }}\n    </div>\n  </div>\n</template>\n\n<script>\nexport default {\n  name: 'AdminLibrary',\n  data() {\n    return {\n      // 书籍数据\n      books: [\n        {\n          id: 1,\n          title: \"Professional JavaScript for Web Developers\",\n          author: \"Nicholas C. Zakas\",\n          cover: \"https://placeholder.pics/svg/300x200/DEDEDE/555555/JavaScript%20Advanced%20Programming\",\n          category: \"Technology\",\n          isbn: \"9787115275790\",\n          totalCount: 5,\n          currentCount: 3,\n          description: \"This book details the core concepts and technical details of the JavaScript language.\"\n        },\n        {\n          id: 2,\n          title: \"CSS Secrets\",\n          author: \"Lea Verou\",\n          cover: \"https://placeholder.pics/svg/300x200/DEDEDE/555555/CSS%20Secrets\",\n          category: \"Technology\",\n          isbn: \"9787115433459\",\n          totalCount: 3,\n          currentCount: 0,\n          description: \"This book reveals 47 little-known CSS tricks.\"\n        },\n        {\n          id: 3,\n          title: \"One Hundred Years of Solitude\",\n          author: \"Gabriel García Márquez\",\n          cover: \"https://placeholder.pics/svg/300x200/DEDEDE/555555/One%20Hundred%20Years%20of%20Solitude\",\n          category: \"Literature\",\n          isbn: \"9787544258974\",\n          totalCount: 8,\n          currentCount: 2,\n          description: \"A masterpiece of Latin American magical realism literature.\"\n        },\n        {\n          id: 4,\n          title: \"Sapiens: A Brief History of Humankind\",\n          author: \"Yuval Noah Harari\",\n          cover: \"https://placeholder.pics/svg/300x200/DEDEDE/555555/Sapiens%3A%20A%20Brief%20History%20of%20Humankind\",\n          category: \"History\",\n          isbn: \"9787508647357\",\n          totalCount: 4,\n          currentCount: 4,\n          description: \"The human development journey from the Cognitive Revolution to the Scientific Revolution.\"\n        },\n        {\n          id: 5,\n          title: \"The Story of Art\",\n          author: \"E.H. Gombrich\",\n          cover: \"https://placeholder.pics/svg/300x200/DEDEDE/555555/The%20Story%20of%20Art\",\n          category: \"Art\",\n          isbn: \"9787108018511\",\n          totalCount: 2,\n          currentCount: 0,\n          description: \"A classic introductory book on art history.\"\n        },\n        {\n          id: 6,\n          title: \"The Design of Everyday Things\",\n          author: \"Donald A. Norman\",\n          cover: \"https://placeholder.pics/svg/300x200/DEDEDE/555555/The%20Design%20of%20Everyday%20Things\",\n          category: \"Technology\",\n          isbn: \"9787121285862\",\n          totalCount: 6,\n          currentCount: 1,\n          description: \"Exploring the relationship between everyday product design and user psychology.\"\n        }\n      ],\n      // 筛选条件\n      searchQuery: '',\n      categoryFilter: '',\n      statusFilter: '',\n      // 模态框状态 - 重命名以避免与方法名冲突\n      isUploadModalVisible: false,\n      isLoanDurationModalVisible: false,\n      editingBook: null,\n      // 表单数据\n      bookForm: {\n        title: '',\n        author: '',\n        isbn: '',\n        category: '',\n        totalCount: 1,\n        currentCount: 1,\n        description: '',\n        cover: null\n      },\n      // 借书时长\n      loanDuration: 14,\n      // Toast 提示\n      toast: {\n        show: false,\n        message: ''\n      }\n    }\n  },\n  computed: {\n    // 筛选后的书籍列表\n    filteredBooks() {\n      let filtered = this.books\n      \n      if (this.searchQuery) {\n        const query = this.searchQuery.toLowerCase()\n        filtered = filtered.filter(book => \n          book.title.toLowerCase().includes(query) || \n          book.author.toLowerCase().includes(query)\n        )\n      }\n      \n      if (this.categoryFilter) {\n        filtered = filtered.filter(book => book.category === this.categoryFilter)\n      }\n      \n      if (this.statusFilter) {\n        if (this.statusFilter === 'available') {\n          filtered = filtered.filter(book => book.currentCount > 0)\n        } else if (this.statusFilter === 'borrowed') {\n          filtered = filtered.filter(book => book.currentCount === 0)\n        }\n      }\n      \n      return filtered\n    }\n  },\n  methods: {\n    // 显示上传模态框\n    openUploadModal() {\n      this.editingBook = null\n      this.bookForm = {\n        title: '',\n        author: '',\n        isbn: '',\n        category: '',\n        totalCount: 1,\n        currentCount: 1,\n        description: '',\n        cover: null\n      }\n      this.isUploadModalVisible = true\n    },\n    // 显示借书时长模态框\n    openLoanDurationModal() {\n      this.isLoanDurationModalVisible = true\n    },\n    // 关闭所有模态框\n    closeModals() {\n      this.isUploadModalVisible = false\n      this.isLoanDurationModalVisible = false\n      this.editingBook = null\n    },\n    // 处理书籍提交（新增或编辑）\n    handleBookSubmit() {\n      if (this.editingBook) {\n        // 更新书籍\n        const index = this.books.findIndex(b => b.id === this.editingBook.id)\n        if (index !== -1) {\n          this.books[index] = {\n            ...this.editingBook,\n            ...this.bookForm\n          }\n          this.showToast('Book information updated successfully!')\n        }\n      } else {\n        // 新增书籍\n        const newBook = {\n          id: Date.now(),\n          ...this.bookForm,\n          cover: this.bookForm.cover || `https://placeholder.pics/svg/300x200/DEDEDE/555555/${encodeURIComponent(this.bookForm.title)}`\n        }\n        this.books.unshift(newBook)\n        this.showToast('Book uploaded successfully!')\n      }\n      \n      this.closeModals()\n    },\n    // 编辑书籍\n    editBook(book) {\n      this.editingBook = book\n      this.bookForm = { ...book }\n      this.isUploadModalVisible = true\n    },\n    // 删除书籍\n    deleteBook(bookId) {\n      if (confirm('Are you sure you want to delete this book?')) {\n        const index = this.books.findIndex(b => b.id === bookId)\n        if (index !== -1) {\n          this.books.splice(index, 1)\n          this.showToast('Book deleted')\n        }\n      }\n    },\n    // 处理封面图片上传\n    handleCoverUpload(event) {\n      const file = event.target.files[0]\n      if (file) {\n        // In a real application, this should upload to a server and get a URL\n      // Here we simply use a local URL for preview\n        this.bookForm.cover = URL.createObjectURL(file)\n      }\n    },\n    // 保存借书时长设置\n    saveLoanDuration() {\n      // 在实际应用中，这里会发送到服务器保存设置\n      console.log(`Loan duration set to: ${this.loanDuration} days`)\n      this.showToast(`Loan duration set to ${this.loanDuration} days`)\n      this.closeModals()\n    },\n    // 显示 Toast 提示\n    showToast(message) {\n      this.toast.message = message\n      this.toast.show = true\n      setTimeout(() => {\n        this.toast.show = false\n      }, 3000)\n    },\n    // 筛选书籍（用于搜索和筛选）\n    filterBooks() {\n      // 这个方法现在由 computed 属性 filteredBooks 自动处理\n      // 保留这个方法是为了兼容模板中的 @input 和 @change 事件\n    }\n  },\n  mounted() {\n    console.log('AdminLibrary 组件已挂载')\n    console.log('初始书籍数据:', this.books)\n  }\n}\n</script>\n\n<style scoped>\n/* 添加与classroom一致的CSS变量 */\n.admin-library {\n  --primary-color: #2A5CAA;\n  --primary-light: #E8F0FE;\n  --secondary-color: #4CAF50;\n  --secondary-light: #E8F5E9;\n  --danger-color: #F44336;\n  --danger-light: #FFEBEE;\n  --text-color: #333;\n  --text-light: #666;\n  --border-color: #E0E0E0;\n  --bg-color: #F9F9F9;\n  --white: #FFFFFF;\n  --shadow: 0 2px 8px rgba(0, 0, 0, 0.1);\n  --radius: 8px;\n  --transition: all 0.3s ease;\n}\n\n.admin-library {\n  min-height: 100vh;\n  background-color: var(--bg-color);\n  font-family: 'Roboto', 'PingFang SC', 'Microsoft YaHei', sans-serif;\n  color: var(--text-color);\n  line-height: 1.6;\n}\n\n/* 主内容区域 */\n.admin-library-container {\n  max-width: 1200px;\n  margin: 20px auto;\n  padding: 0 20px;\n}\n\n.page-title {\n  font-size: 24px;\n  font-weight: 500;\n  color: var(--primary-color);\n  margin: 0;\n}\n\n/* 控制区域 */\n.library-controls {\n  display: flex;\n  justify-content: space-between;\n  align-items: center;\n  margin-bottom: 30px;\n  padding: 20px 0;\n}\n\n.action-buttons {\n  display: flex;\n  gap: 12px;\n}\n\n/* 按钮样式 */\n.btn {\n  display: inline-flex;\n  align-items: center;\n  justify-content: center;\n  padding: 10px 16px;\n  border-radius: var(--radius);\n  border: none;\n  font-size: 14px;\n  font-weight: 500;\n  cursor: pointer;\n  transition: var(--transition);\n  gap: 8px;\n  text-decoration: none;\n  min-height: 40px;\n}\n\n.btn i {\n  font-size: 16px;\n}\n\n.btn-primary {\n  background-color: var(--primary-color);\n  color: var(--white);\n  border: 1px solid var(--primary-color);\n}\n\n.btn-primary:hover {\n  background-color: #1E4B8B;\n  border-color: #1E4B8B;\n  box-shadow: var(--shadow);\n  transform: translateY(-1px);\n}\n\n.btn-secondary {\n  background-color: var(--secondary-color);\n  color: var(--white);\n  border: 1px solid var(--secondary-color);\n}\n\n.btn-secondary:hover {\n  background-color: #3E9D44;\n 