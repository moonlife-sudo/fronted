)\r\n\r\n    watch(() => route.params.courseId, (newId) => {\r\n      courseId.value = newId || ''\r\n    }, { immediate: true })\r\n\r\n    // 判断是否显示 Sidebar\r\n    const showSidebar = computed(() => {\r\n      if (route.meta && typeof route.meta.showSidebar !== 'undefined') {\r\n        return route.meta.showSidebar\r\n      }\r\n      return route.path.startsWith('/student')\r\n    })\r\n\r\n    // 顶部 Tab 配置 (可选)\r\n    const moduleConfigs = {\r\n      'leave': [\r\n        { name: '我要请假', path: 'leave/apply' },\r\n        { name: '申请记录', path: 'leave/records' }\r\n      ]\r\n    }\r\n\r\n    const currentTabs = computed(() => {\r\n      const path = route.path\r\n      if (path.includes('/leave')) return moduleConfigs['leave']\r\n      return []\r\n    })\r\n\r\n    const resolveTabPath = (subPath) => {\r\n      // 1. 如果在课程内，拼课程路径\r\n      if (courseId.value) {\r\n        return `/student/course/${courseId.value}/${subPath}`\r\n      }\r\n      // 2. 【修复】如果在全局，强制拼上 /student/ 前缀，变成绝对路径\r\n      return `/student/${subPath}`\r\n    }\r\n\r\n    return {\r\n      showSidebar,\r\n      currentTabs,\r\n      resolveTabPath\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n.layout {\r\n  min-block-size: 100vh;\r\n  background-color: #f5f7fa;\r\n  display: flex;\r\n  flex-direction: column;\r\n}\r\n\r\n.main-content {\r\n  padding-block-start: 60px;\r\n  min-block-size: 100vh;\r\n  transition: margin-inline-start 0.3s ease;\r\n  display: flex;\r\n  flex-direction: column;\r\n}\r\n\r\n/* 关键样式：有侧边栏时，内容向右推 240px */\r\n.main-content.with-sidebar {\r\n  margin-inline-start: 240px;\r\n}\r\n\r\n/* 次级导航栏样式 (仿教师端) */\r\n.secondary-navbar {\r\n  background: white;\r\n  padding: 0 30px;\r\n  border-block-end: 1px solid #e8e8e8;\r\n  block-size: 50px;\r\n  display: flex;\r\n  align-items: center;\r\n  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.03);\r\n  position: sticky;\r\n  inset-block-start: 60px;\r\n  z-index: 998;\r\n  inline-size: 100%;\r\n  box-sizing: border-box;\r\n}\r\n\r\n.content-body {\r\n  flex: 1;\r\n  padding: 24px;\r\n  inline-size: 100%;\r\n  box-sizing: border-box;\r\n}\r\n\r\n.module-tabs {\r\n  display: flex;\r\n  gap: 30px;\r\n  block-size: 50px;\r\n}\r\n\r\n.tab-item {\r\n  display: flex;\r\n  align-items: center;\r\n  block-size: 100%;\r\n  font-size: 14px;\r\n  color: #666;\r\n  text-decoration: none;\r\n  border-block-end: 2px solid transparent;\r\n  cursor: pointer;\r\n  padding: 0 5px;\r\n  transition: all 0.2s;\r\n}\r\n\r\n.tab-item:hover {\r\n  color: #2A5CAA;\r\n}\r\n\r\n.tab-item.active {\r\n  color: #2A5CAA;\r\n  font-weight: 500;\r\n  border-block-end-color: #2A5CAA;\r\n}\r\n</style>"],"mappings":";;;EACO,SAAM;AAAQ;;;EAOmC,SAAM;;;EACjD,SAAM;AAAa;;EAQrB,SAAM;AAAc;;;;;;uBAhB7BA,mBAAA,CAoBM,OApBNC,UAoBM,GAnBJC,YAAA,CAAiBC,wBAAA,GAECC,MAAA,CAAAC,WAAW,I,cAA7BC,YAAA,CAAiCC,qBAAA;IAAAC,GAAA;EAAA,M,mCAEjCC,mBAAA,CAcO;IAdD,SAAKC,eAAA,EAAC,cAAc;MAAA,gBAA2BN,MAAA,CAAAC;IAAW;MAEnDD,MAAA,CAAAC,WAAW,IAAID,MAAA,CAAAO,WAAW,CAACC,MAAM,Q,cAA5CZ,mBAAA,CAOM,OAPNa,UAOM,GANJJ,mBAAA,CAKM,OALNK,UAKM,I,kBAJJd,mBAAA,CAGce,SAAA,QAAAC,WAAA,CAHaZ,MAAA,CAAAO,WAAW,YAAlBM,GAAG;yBAAvBX,YAAA,CAGcY,sBAAA;MAH2BV,GAAG,EAAES,GAAG,CAACE,IAAI;MAAGC,EAAE,EAAEhB,MAAA,CAAAiB,cAAc,CAACJ,GAAG,CAACE,IAAI;MAAG,SAAM,UAAU;MACrG,cAAY,EAAC;;0BACb;QAAA,OAAc,C,kCAAXF,GAAG,CAACK,IAAI,iB;;;;2EAKjBb,mBAAA,CAEM,OAFNc,UAEM,GADJrB,YAAA,CAAesB,sBAAA,E","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}